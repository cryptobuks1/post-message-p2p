{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,

    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "inlineSources": true
  },
  "exclude": [
    "__tests__",
    "dist"
  ]
}
